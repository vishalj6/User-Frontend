@model UsersProject.Pages.UserFolder.UserDetailsModel;
@{
    ViewData["Title"] = "Details";
}
<div>
    <h4>User</h4>
    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover w-100 text-light">
            <thead>
                <tr>
                    <th>
                        Id
                        @* @Html.DisplayNameFor(model => model.User.user_id) *@
                    </th>
                    <th>
                        First Name
                        @* @Html.DisplayNameFor(model => model.User.firstName) *@
                    </th>
                    <th>
                        Last Name
                        @* @Html.DisplayNameFor(model => model.User.lastName) *@
                    </th>
                    <th>
                        Phone no
                        @* @Html.DisplayNameFor(model => model.User.phoneNumber) *@
                    </th>
                    <th>
                        Email
                        @* @Html.DisplayNameFor(model => model.User.email) *@
                    </th>
                    <th>
                        Country
                        @* @Html.DisplayNameFor(model => model.User.country_name) *@
                    </th>
                    <th>
                        State
                        @* @Html.DisplayNameFor(model => model.User.state_name) *@
                    </th>
                    <th>
                        City
                        @* @Html.DisplayNameFor(model => model.User.city) *@
                    </th>
                    <th>
                        Address
                        @* @Html.DisplayNameFor(model => model.User.address) *@
                    </th>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.User.userID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.User.firstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.User.lastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.User.phoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.User.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.User.country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.User.state)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.User.city)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.User.address)
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
</div>
<div>
    <a asp-page="./EditUser" class="btn btn-primary rounded me-2" asp-route-id="@Model.User.userID">
        <svg xmlns="http://www.w3.org/2000/svg" height="16" width="16" viewBox="0 0 512 612"><path fill="currentColor" d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.7 15.7-7.4 21.9-13.5L437.7 172.3 339.7 74.3 172.4 241.7zM96 64C43 64 0 107 0 160V416c0 53 43 96 96 96H352c53 0 96-43 96-96V320c0-17.7-14.3-32-32-32s-32 14.3-32 32v96c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V160c0-17.7 14.3-32 32-32h96c17.7 0 32-14.3 32-32s-14.3-32-32-32H96z" /></svg>
        Edit</a>
    <a asp-page="./DeleteUser" class="btn btn-danger rounded" asp-route-id="@Model.User.userID">
        <svg xmlns="http://www.w3.org/2000/svg" height="16" width="13.5" viewBox="0 0 448 570"><path fill="currentColor" d="M163.8 0H284.2c12.1 0 23.2 6.8 28.6 17.7L320 32h96c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 96 0 81.7 0 64S14.3 32 32 32h96l7.2-14.3C140.6 6.8 151.7 0 163.8 0zM32 128H416L394.8 467c-1.6 25.3-22.6 45-47.9 45H101.1c-25.3 0-46.3-19.7-47.9-45L32 128zm192 64c-6.4 0-12.5 2.5-17 7l-80 80c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l39-39V408c0 13.3 10.7 24 24 24s24-10.7 24-24V273.9l39 39c9.4 9.4 24.6 9.4 33.9 0s9.4-24.6 0-33.9l-80-80c-4.5-4.5-10.6-7-17-7z" /></svg>
        Delete</a>

    @if (TempData["isAdmin"] != null && Convert.ToBoolean(TempData["isAdmin"]) == true)
    {
        TempData.Keep("isAdmin");
        @* <a href="" class="btn btn-success rounded text-light"><i class="fa-solid fa-backward me-2" aria-hidden="true"></i>Back to List</a> *@
        <a asp-page="./UserIndex" class="btn btn-success rounded text-light">
            <svg xmlns="http://www.w3.org/2000/svg" height="17" width="17" viewBox="0 0 512 600 "><path fill="currentColor" d="M459.5 440.6c9.5 7.9 22.8 9.7 34.1 4.4s18.4-16.6 18.4-29V96c0-12.4-7.2-23.7-18.4-29s-24.5-3.6-34.1 4.4L288 214.3V256v41.7L459.5 440.6zM256 352V256 128 96c0-12.4-7.2-23.7-18.4-29s-24.5-3.6-34.1 4.4l-192 160C4.2 237.5 0 246.5 0 256s4.2 18.5 11.5 24.6l192 160c9.5 7.9 22.8 9.7 34.1 4.4s18.4-16.6 18.4-29V352z" /></svg> Back to List
        </a>

    }
</div>



@if (TempData["isSuccess"] != null && TempData["isAdmin"] != null)
{
    TempData.Keep("isAdmin");
    <script>
        toastr.success("@TempData["SuccessMSG"]", "Success");
    </script>
}

@if (TempData["isSuccess"] != null && TempData["UserId"] != null)
{
    TempData.Keep("UserId");
    <script>
        toastr.success("@TempData["SuccessMSG"]", "Success");
    </script>
}

@if (TempData["UserName"] != null)
{
    <script>
        toastr.success("logged in as @TempData["UserName"]", "Success");
    </script>
}

