@page
@model UsersProject.Pages.UserFolder.CreateUsersModel
@{
    ViewData["Title"] = "Create";
}

<div class="custom-create-user-form-main-container">
    <div class="custom-create-user-form-div">
        <form method="post" class="custom-create-user-form row gx-3 gy-3" id="create-user-form">
            <h1 class="mt-0">
                <svg style="margin-top:-5px;" xmlns="http://www.w3.org/2000/svg" height="27" width="24" viewBox="0 0 448 512">
                    <path fill="currentColor" d="M304 128a80 80 0 1 0 -160 0 80 80 0 1 0 160 0zM96 128a128 128 0 1 1 256 0A128 128 0 1 1 96 128zM49.3 464H398.7c-8.9-63.3-63.3-112-129-112H178.3c-65.7 0-120.1 48.7-129 112zM0 482.3C0 383.8 79.8 304 178.3 304h91.4C368.2 304 448 383.8 448 482.3c0 16.4-13.3 29.7-29.7 29.7H29.7C13.3 512 0 498.7 0 482.3z" />
                </svg>
                Sign Up
            </h1>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-custom-group form-group col-sm-12 col-md-6">
                <label asp-for="Users.firstName" class="control-label">First Name</label>
                <div class="input-group-svg" style="position:relative">
                    <svg style="position:absolute;left:10px;top:25%;margin-top:0px" xmlns="http://www.w3.org/2000/svg" height="15" width="13.25" viewBox="0 0 448 512">
                        <path fill="currentColor" d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z" />
                    </svg>
                    <input asp-for="Users.firstName" required />
                </div>

                <span asp-validation-for="Users.firstName" class="text-danger"></span>
            </div>
            <div class="form-custom-group form-group col-sm-12 col-md-6">
                <label asp-for="Users.lastName" class="control-label">Last Name</label>
                <div class="input-group-svg" style="position:relative">
                    <svg style="position:absolute;left:10px;top:25%;margin-top:0px" xmlns="http://www.w3.org/2000/svg"  height="15" width="13.25" viewBox="0 0 448 512">
                        <path fill="currentColor" d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z" />
                    </svg>
                    <input asp-for="Users.lastName" required />
                </div>

                <span asp-validation-for="Users.lastName" class="text-danger"></span>
            </div>
            <div class="form-custom-group form-group col-sm-12 col-md-6">
                <label asp-for="Users.phoneNumber" class="control-label">Phone no</label>

                <div class="input-group-svg" style="position:relative">

                    <svg style="position:absolute;left:10px;top:25%" xmlns="http://www.w3.org/2000/svg" height="15" width="15" viewBox="0 0 512 512"><path fill="currentColor" d="M164.9 24.6c-7.7-18.6-28-28.5-47.4-23.2l-88 24C12.1 30.2 0 46 0 64C0 311.4 200.6 512 448 512c18 0 33.8-12.1 38.6-29.5l24-88c5.3-19.4-4.6-39.7-23.2-47.4l-96-40c-16.3-6.8-35.2-2.1-46.3 11.6L304.7 368C234.3 334.7 177.3 277.7 144 207.3L193.3 167c13.7-11.2 18.4-30 11.6-46.3l-40-96z" /></svg>
                    <input class="user-phoneno" asp-for="Users.phoneNumber" maxlength="10" minlength="10" required />
                </div>
                <span asp-validation-for="Users.phoneNumber" class="text-danger"></span>
            </div>
            <div class="form-custom-group form-group col-sm-12 col-md-6">
                <label asp-for="Users.email" class="control-label">Email</label>
                <div class="input-group-svg" style="position:relative">
                    <svg style="position:absolute;left:10px;top:25%" xmlns="http://www.w3.org/2000/svg" height="15" width="15" viewBox="0 0 512 512"><path fill="currentColor" d="M64 112c-8.8 0-16 7.2-16 16v22.1L220.5 291.7c20.7 17 50.4 17 71.1 0L464 150.1V128c0-8.8-7.2-16-16-16H64zM48 212.2V384c0 8.8 7.2 16 16 16H448c8.8 0 16-7.2 16-16V212.2L322 328.8c-38.4 31.5-93.7 31.5-132 0L48 212.2zM0 128C0 92.7 28.7 64 64 64H448c35.3 0 64 28.7 64 64V384c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V128z" /></svg>
                    <input type="email" asp-for="Users.email" required />
                </div>
                <span asp-validation-for="Users.email" class="text-danger"></span>
            </div>
            <div class="form-custom-group form-group col-sm-12 col-md-6">
                <label asp-for="Users.city" class="control-label">City</label>
                <select asp-for="Users.city" asp-items="Model.City" required>
                    <option disabled selected>Select a city</option>
                </select>
                <span asp-validation-for="Users.city" class="text-danger"></span>
            </div>
            <div class="form-custom-group form-group col-sm-12 col-md-6">
                <label asp-for="Users.address" class="control-label">Address</label>
                <div class="input-group-svg" style="position:relative">
                    <svg style="position:absolute;left:10px;top:25%" xmlns="http://www.w3.org/2000/svg" height="14" width="10.5" viewBox="0 0 384 512"><path fill="currentColor" d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z" /></svg>
                    <input asp-for="Users.address" required />
                </div>
                <span asp-validation-for="Users.address" class="text-danger"></span>
            </div>
            <div class="form-custom-group form-group col-sm-12 col-md-6">
                <label asp-for="Users.password" class="control-label">Create Password</label>
                <div class="input-group-svg" style="position:relative">
                    <svg style="position:absolute;left:10px;top:25%" xmlns="http://www.w3.org/2000/svg" height="14" width="14" viewBox="0 0 512 512"><path fill="currentColor" d="M336 352c97.2 0 176-78.8 176-176S433.2 0 336 0S160 78.8 160 176c0 18.7 2.9 36.8 8.3 53.7L7 391c-4.5 4.5-7 10.6-7 17v80c0 13.3 10.7 24 24 24h80c13.3 0 24-10.7 24-24V448h40c13.3 0 24-10.7 24-24V384h40c6.4 0 12.5-2.5 17-7l33.3-33.3c16.9 5.4 35 8.3 53.7 8.3zM376 96a40 40 0 1 1 0 80 40 40 0 1 1 0-80z" /></svg>
                    <input asp-for="Users.password" type="password" required />
                    <button type="button" class="btn text-light togglePassword" style="position:absolute; right:5px; top:0%; outline:none; box-shadow:none; border:none; background:none;">
                        <svg xmlns="http://www.w3.org/2000/svg" height="15" width="16.75" viewBox="0 0 600 512"><path class="eyeIcon" fill="currentColor" d="M288 80c-65.2 0-118.8 29.6-159.9 67.7C89.6 183.5 63 226 49.4 256c13.6 30 40.2 72.5 78.6 108.3C169.2 402.4 222.8 432 288 432s118.8-29.6 159.9-67.7C486.4 328.5 513 286 526.6 256c-13.6-30-40.2-72.5-78.6-108.3C406.8 109.6 353.2 80 288 80zM95.4 112.6C142.5 68.8 207.2 32 288 32s145.5 36.8 192.6 80.6c46.8 43.5 78.1 95.4 93 131.1c3.3 7.9 3.3 16.7 0 24.6c-14.9 35.7-46.2 87.7-93 131.1C433.5 443.2 368.8 480 288 480s-145.5-36.8-192.6-80.6C48.6 356 17.3 304 2.5 268.3c-3.3-7.9-3.3-16.7 0-24.6C17.3 208 48.6 156 95.4 112.6zM288 336c44.2 0 80-35.8 80-80s-35.8-80-80-80c-.7 0-1.3 0-2 0c1.3 5.1 2 10.5 2 16c0 35.3-28.7 64-64 64c-5.5 0-10.9-.7-16-2c0 .7 0 1.3 0 2c0 44.2 35.8 80 80 80zm0-208a128 128 0 1 1 0 256 128 128 0 1 1 0-256z" /></svg>
                    </button>
                </div>
                <span asp-validation-for="Users.password" class="text-danger"></span>
            </div>
            <div class="form-custom-group form-group col-sm-12 col-md-6">
                <label asp-for="@Model.confirmUser_password" class="control-label">Confirm Password</label>
                <div class="input-group-svg" style="position:relative">
                    <svg style="position:absolute;left:10px;top:25%" xmlns="http://www.w3.org/2000/svg" height="14" width="12.25" viewBox="0 0 448 512"><path fill="currentColor" d="M144 144v48H304V144c0-44.2-35.8-80-80-80s-80 35.8-80 80zM80 192V144C80 64.5 144.5 0 224 0s144 64.5 144 144v48h16c35.3 0 64 28.7 64 64V448c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V256c0-35.3 28.7-64 64-64H80z" /></svg>
                    <input asp-for="@Model.confirmUser_password" type="password" required />
                    <button type="button" class="btn text-light togglePassword" style="position:absolute; right:5px; top:0%; outline:none; box-shadow:none; border:none; background:none;">
                        <svg xmlns="http://www.w3.org/2000/svg" height="15" width="16.75" viewBox="0 0 600 512"><path class="eyeIcon" fill="currentColor" d="M288 80c-65.2 0-118.8 29.6-159.9 67.7C89.6 183.5 63 226 49.4 256c13.6 30 40.2 72.5 78.6 108.3C169.2 402.4 222.8 432 288 432s118.8-29.6 159.9-67.7C486.4 328.5 513 286 526.6 256c-13.6-30-40.2-72.5-78.6-108.3C406.8 109.6 353.2 80 288 80zM95.4 112.6C142.5 68.8 207.2 32 288 32s145.5 36.8 192.6 80.6c46.8 43.5 78.1 95.4 93 131.1c3.3 7.9 3.3 16.7 0 24.6c-14.9 35.7-46.2 87.7-93 131.1C433.5 443.2 368.8 480 288 480s-145.5-36.8-192.6-80.6C48.6 356 17.3 304 2.5 268.3c-3.3-7.9-3.3-16.7 0-24.6C17.3 208 48.6 156 95.4 112.6zM288 336c44.2 0 80-35.8 80-80s-35.8-80-80-80c-.7 0-1.3 0-2 0c1.3 5.1 2 10.5 2 16c0 35.3-28.7 64-64 64c-5.5 0-10.9-.7-16-2c0 .7 0 1.3 0 2c0 44.2 35.8 80 80 80zm0-208a128 128 0 1 1 0 256 128 128 0 1 1 0-256z" /></svg>
                    </button>
                </div>
                <span asp-validation-for="@Model.confirmUser_password" class="text-danger"></span>
            </div>
            <div class="form-custom-group form-group col-sm-12 col-md-6 mt-3">
                <button type="submit" class="btn btn-success w-100">Create</button>
            </div>
            <div class="form-custom-group form-group col-sm-12 col-md-6 mt-3">
                @if ((TempData["isAdmin"] != null && Convert.ToBoolean(TempData["isAdmin"]) == true))
                {
                    TempData.Keep("isAdmin");
                    <a asp-page="./UserIndex" class="btn btn-outline-light w-100">Go Back</a>
                }
                else
                {
                    TempData.Keep("isAdmin");
                    <a asp-page="/Index" class="btn btn-outline-light w-100">Go Back</a>
                }
                @* <button type="button" class="btn btn-outline-light w-100" onclick="window.location.replace(/Admin)">Go Back</button> *@
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


@if (TempData["isSuccess"] != null)
{
    @if (Convert.ToBoolean(TempData["isSuccess"]) == false)
    {
        <script>
            toastr.error("@TempData["SuccessMSG"]", "Error");
        </script>
    }
}