@page
@model UsersProject.Pages.UserFolder.EditUserModel;
@{
    ViewData["Title"] = "Edit";
}

<div class="custom-create-user-form-main-container">
    <div class="custom-create-user-form-div custom-edit-user-form-div">
        <form method="post" class="custom-create-user-form row gx-3 gy-3" id="edit-user-form">
            <h1 class="mt-0">
                <svg style="margin-top:-5px;" xmlns="http://www.w3.org/2000/svg" height="27" width="24" viewBox="0 0 448 512">
                    <path fill="currentColor" d="M304 128a80 80 0 1 0 -160 0 80 80 0 1 0 160 0zM96 128a128 128 0 1 1 256 0A128 128 0 1 1 96 128zM49.3 464H398.7c-8.9-63.3-63.3-112-129-112H178.3c-65.7 0-120.1 48.7-129 112zM0 482.3C0 383.8 79.8 304 178.3 304h91.4C368.2 304 448 383.8 448 482.3c0 16.4-13.3 29.7-29.7 29.7H29.7C13.3 512 0 498.7 0 482.3z" />
                </svg>
                Edit User
            </h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.userID" />
            <div class="form-custom-group form-group col-sm-12 col-md-6">
                <label asp-for="User.firstName" class="control-label"></label>
                <div class="input-group-svg" style="position:relative">
                    <svg style="position:absolute;left:10px;top:25%" xmlns="http://www.w3.org/2000/svg" style="margin-top:0px" height="15" width="13.25" viewBox="0 0 448 512">
                        <path fill="currentColor" d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z" />
                    </svg>
                    <input asp-for="User.firstName" required />
                </div>
                <span asp-validation-for="User.firstName" class="text-danger"></span>
            </div>
            <div class="form-custom-group form-group col-sm-12 col-md-6">
                <label asp-for="User.lastName" class="control-label">Last Name</label>
                <div class="input-group-svg" style="position:relative">
                    <svg style="position:absolute;left:10px;top:25%" xmlns="http://www.w3.org/2000/svg" style="margin-top:0px" height="15" width="13.25" viewBox="0 0 448 512">
                        <path fill="currentColor" d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z" />
                    </svg>
                    <input asp-for="User.lastName" required />
                </div>

                <span asp-validation-for="User.lastName" class="text-danger"></span>
            </div>
            <div class="form-custom-group form-group col-sm-12 col-md-6">
                <label asp-for="User.phoneNumber" class="control-label">Phone no</label>
                <div class="input-group-svg" style="position:relative">

                    <svg style="position:absolute;left:10px;top:25%" xmlns="http://www.w3.org/2000/svg" height="15" width="15" viewBox="0 0 512 512"><path fill="currentColor" d="M164.9 24.6c-7.7-18.6-28-28.5-47.4-23.2l-88 24C12.1 30.2 0 46 0 64C0 311.4 200.6 512 448 512c18 0 33.8-12.1 38.6-29.5l24-88c5.3-19.4-4.6-39.7-23.2-47.4l-96-40c-16.3-6.8-35.2-2.1-46.3 11.6L304.7 368C234.3 334.7 177.3 277.7 144 207.3L193.3 167c13.7-11.2 18.4-30 11.6-46.3l-40-96z" /></svg>
                    <input class="user-phoneno" asp-for="User.phoneNumber" maxlength="10" minlength="10" required />
                </div>
                <span asp-validation-for="User.phoneNumber" class="text-danger"></span>
            </div>
            <div class="form-custom-group form-group col-sm-12 col-md-6">
                <label asp-for="User.email" class="control-label">Email</label>
                <div class="input-group-svg" style="position:relative">
                    <svg style="position:absolute;left:10px;top:25%" xmlns="http://www.w3.org/2000/svg" height="15" width="15" viewBox="0 0 512 512"><path fill="currentColor" d="M64 112c-8.8 0-16 7.2-16 16v22.1L220.5 291.7c20.7 17 50.4 17 71.1 0L464 150.1V128c0-8.8-7.2-16-16-16H64zM48 212.2V384c0 8.8 7.2 16 16 16H448c8.8 0 16-7.2 16-16V212.2L322 328.8c-38.4 31.5-93.7 31.5-132 0L48 212.2zM0 128C0 92.7 28.7 64 64 64H448c35.3 0 64 28.7 64 64V384c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V128z" /></svg>
                    <input type="email" asp-for="User.email" required />
                </div>
                <span asp-validation-for="User.email" class="text-danger"></span>
            </div>
            <div class="form-custom-group form-group col-sm-12 col-md-6">
                <label asp-for="User.city" class="control-label">City</label>
                <select asp-for="User.city" asp-items="Model.City" required>
                    <option disabled selected>Select a city</option>
                </select>
                <span asp-validation-for="User.city" class="text-danger"></span>
            </div>
            <div class="form-custom-group form-group col-sm-12 col-md-6">
                <label asp-for="User.address" class="control-label">Address</label>
                <div class="input-group-svg" style="position:relative">
                    <svg style="position:absolute;left:10px;top:25%" xmlns="http://www.w3.org/2000/svg" height="14" width="10.5" viewBox="0 0 384 512"><path fill="currentColor" d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z" /></svg>
                    <input asp-for="User.address" required />
                </div>
                <span asp-validation-for="User.address" class="text-danger"></span>
            </div>
            <div class="form-custom-group form-group col-sm-12 col-md-6 mt-2">
                <button type="submit" class="btn btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" style="margin-top:-3px" height="14" width="12.25" viewBox="0 0 448 512"><path fill="currentColor" d="M48 96V416c0 8.8 7.2 16 16 16H384c8.8 0 16-7.2 16-16V170.5c0-4.2-1.7-8.3-4.7-11.3l33.9-33.9c12 12 18.7 28.3 18.7 45.3V416c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V96C0 60.7 28.7 32 64 32H309.5c17 0 33.3 6.7 45.3 18.7l74.5 74.5-33.9 33.9L320.8 84.7c-.3-.3-.5-.5-.8-.8V184c0 13.3-10.7 24-24 24H104c-13.3 0-24-10.7-24-24V80H64c-8.8 0-16 7.2-16 16zm80-16v80H272V80H128zm32 240a64 64 0 1 1 128 0 64 64 0 1 1 -128 0z" /></svg> Save
                </button>
                @if ((TempData["isAdmin"] != null && Convert.ToBoolean(TempData["isAdmin"]) == true))
                {
                    TempData.Keep("isAdmin");
                    <a asp-page="./UserIndex" class="btn btn-outline-light">Go Back</a>
                }
                else
                {
                    TempData.Keep("isAdmin");
                    <a asp-page="./UserDetails" asp-route-id="@Model.User.userID" class="btn btn-outline-light">Go Back</a>
                }
            </div>
        </form>
    </div>
</div>
<div>

    @if (TempData["isAdmin"] != null && Convert.ToBoolean(TempData["isAdmin"]) == true)
    {
        TempData.Keep("isAdmin");
        @* <a href="" class="btn btn-success rounded text-light"><i class="fa-solid fa-backward me-2" aria-hidden="true"></i>Back to List</a> *@
        <a asp-page="./UserIndex" class="btn btn-outline-success rounded text-light">
            <svg xmlns="http://www.w3.org/2000/svg" height="17" width="17" viewBox="0 0 512 600 "><path fill="currentColor" d="M459.5 440.6c9.5 7.9 22.8 9.7 34.1 4.4s18.4-16.6 18.4-29V96c0-12.4-7.2-23.7-18.4-29s-24.5-3.6-34.1 4.4L288 214.3V256v41.7L459.5 440.6zM256 352V256 128 96c0-12.4-7.2-23.7-18.4-29s-24.5-3.6-34.1 4.4l-192 160C4.2 237.5 0 246.5 0 256s4.2 18.5 11.5 24.6l192 160c9.5 7.9 22.8 9.7 34.1 4.4s18.4-16.6 18.4-29V352z" /></svg> Back to List
        </a>

    }
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


@if (TempData["isSuccess"] != null)
{
    @if (Convert.ToBoolean(TempData["isSuccess"]) == false)
    {
        <script>
            toastr.error("@TempData["SuccessMSG"]", "Error");
        </script>
    }
}
